{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,

    "module": "ESNext",
    "target": "ES5",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
